{
    "configurations": [
        {
            "name": "Launch Lennys debugger",
            "program": "${workspaceFolder}/dist/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "console": "integratedTerminal"
        },
        {
            "type": "node-terminal",
            "name": "Debug start",
            "request": "launch",
            "command": "npm run start",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current file",
            "program": "${file}"
        }
    ]
}